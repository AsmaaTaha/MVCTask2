@model Employee
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Employee";
}

<div class="container">
    <h3>Edit Employee</h3>
    <div>
@using (Html.BeginForm("Edit","Employee"))
            {
            <div class="form-group">
                @Html.LabelFor(e => e.Name)
                @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Salary)
                @Html.TextBoxFor(e => e.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Salary)
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
  }
    </div>
</div>
@section styles
{
    <style>
        .input-validation-error {
            border-color: red;
        }

        .field-validation-error {
            color: red;
        }
    </style>
}

