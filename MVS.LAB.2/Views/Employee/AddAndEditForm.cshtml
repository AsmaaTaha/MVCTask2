@model EmployeeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = string.Concat(TempData.Peek("status").ToString(), "Employee");
    //TempData.Peek("EmployeeId") = Model.Employee.Id;
}

<div class="container">
    <h3>@TempData.Peek("status").ToString()+  Employee</h3>
    <div>
        @using (Html.BeginForm(TempData.Peek("status").ToString(), "Employee"))
        {
            if (TempData.Peek("status").ToString() == "Edit")
            {
            <div class="form-group">
                @Html.LabelFor(e => e.Employee.Id)
                @Html.TextBoxFor(e => e.Employee.Id, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Id)
            </div>
            }
            <div class="form-group">
                @Html.LabelFor(e => e.Employee.Name)
                @Html.TextBoxFor(e => e.Employee.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Employee.Salary)
                @Html.TextBoxFor(e => e.Employee.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Salary)
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Employee.Gender)
                @Html.EnumDropDownListFor(e => e.Employee.Gender, "Select Enum", new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Gender)
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Employee.Dept_FK)
                @Html.DropDownListFor(e => e.Employee.Dept_FK, new SelectList(Model.AllDepartments, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Dept_FK)
            </div>
            <button type="submit" class="btn btn-primary">@TempData.Peek("status").ToString()</button>
        }
    </div>
</div>
@section styles
{
    <style>
        .input-validation-error {
            border-color: red;
        }

        .field-validation-error {
            color: red;
        }
    </style>
}

